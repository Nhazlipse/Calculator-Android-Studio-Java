<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkGrey"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <EditText
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:text="0"
            android:textSize="30pt"
            android:inputType="textPersonName"
            android:id="@+id/editText"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginBottom="1pt"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <Button
                    android:id="@+id/buAC"
                    android:text="AC"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/buPlusMinus"
                    android:text="+/-"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/buDivide"
                    android:text="/"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/buMultiply"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="*"
                    android:textColor="#4E342E"></Button>
            </TableRow>

            <TableRow
                android:layout_marginBottom="1pt"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <Button
                    android:id="@+id/bu7"
                    android:text="7"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/bu8"
                    android:text="8"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/bu9"
                    android:text="9"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/buPercent"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="%"
                    android:textColor="#4E342E"></Button>
            </TableRow>

            <TableRow
                android:layout_marginBottom="1pt"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <Button
                    android:id="@+id/bu4"
                    android:text="4"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/bu5"
                    android:text="5"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/bu6"
                    android:text="6"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/buPlus"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="+"
                    android:textColor="#4E342E"></Button>
            </TableRow>

            <TableRow
                android:layout_marginBottom="1pt"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <Button
                    android:id="@+id/bu1"
                    android:text="1"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/bu2"
                    android:text="2"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/bu3"
                    android:text="3"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:background="@color/black">
                </Button>

                <Button
                    android:id="@+id/buMinus"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="-"
                    android:textColor="#4E342E"></Button>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/bu0"
                android:text="0"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/black">
            </Button>

            <Button
                android:id="@+id/buDot"
                android:text="."
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/black">
            </Button>

            <Button
                android:id="@+id/buEqual"
                android:text="="
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="61pt"
                android:layout_weight="2"
                android:background="@color/black">
            </Button>
        </TableRow>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>